        <CheckBox x:Name="aircondition_l" Content="" Margin="630.5,68.133,629.525,0" VerticalAlignment="Top" Checked="aircondition_l_Checked" d:LayoutOverrides="Width" Unchecked="aircondition_l_Unchecked_1"/>
