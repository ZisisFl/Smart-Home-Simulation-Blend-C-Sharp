<Window x:Class="Teliki.smart_fridge"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Teliki"
        mc:Ignorable="d"
        Title="smart_fridge" 
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner" 
        Width="1280" Height="720">
    <!--WindowStyle="None"-->
    <Grid Margin="0,0,-8,-7" Height="720" VerticalAlignment="Top" Width="1280" HorizontalAlignment="Left">
        <Image x:Name="image" Margin="0" Source="fridge_desk_icons.jpg"/>

        <Button x:Name="browser" Content="Button" Margin="32.667,5.999,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Height="30.627" Width="30.333" Click="browser_Click" Opacity="0.2"/>
        <Button x:Name="weather" Content="Button" Margin="338.666,5.333,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Height="30.627" Width="34.001" Click="weather_Click" Opacity="0.2"/>
        <Button x:Name="radio" Content="Button" Margin="209.999,7.332,0,0" VerticalAlignment="Top" Height="29.294" Click="radio_Click" HorizontalAlignment="Left" Width="32" Opacity="0.2"/>
        <Button x:Name="internal_indications" Content="Button" Margin="396.665,5.999,0,0" VerticalAlignment="Top" Height="30.627" HorizontalAlignment="Left" Width="32.667" Click="internal_indications_Click" Opacity="0.2"/>
        <Button x:Name="recipes" Content="Button" Margin="146,6.665,0,0" VerticalAlignment="Top" Height="30.627" HorizontalAlignment="Left" Width="31.333" Click="recipes_Click" Opacity="0.2"/>
        <Button x:Name="online_shop" Content="Button" Margin="90,6.665,0,0" HorizontalAlignment="Left" Width="32" Click="online_shop_Click" Opacity="0.2" Height="29.961" VerticalAlignment="Top"/>
        <Button x:Name="calendar" Content="Button" Margin="274.666,7.332,0,0" VerticalAlignment="Top" Height="29.294" HorizontalAlignment="Left" Width="31.667" Click="calendar_Click" Opacity="0.2"/>
        <Button x:Name="home_button" Content="Button" Margin="0,5.333,82.918,0" VerticalAlignment="Top" Height="30.627" HorizontalAlignment="Right" Width="31.667" Click="internal_indications_Click" Opacity="0.2"/>
        <Button x:Name="back_button" Content="Button" Margin="0,5.666,26.334,0" VerticalAlignment="Top" Height="31.294" HorizontalAlignment="Right" Width="32.917" Click="internal_indications_Click" Opacity="0.2"/>
        <Image x:Name="browser1" Margin="0,41.96,0,-18.96" Source="web.jpg" Visibility="Hidden"/>
        <Image x:Name="empty" Margin="0,-15.04,0,-54.5" Source="empty_desk.jpg" Visibility="Hidden"/>
        <Button x:Name="kritikosb" Content="Kritikos" HorizontalAlignment="Left" Margin="32.667,89.56,0,0" VerticalAlignment="Top" Width="88" Height="28.95" Click="kritikosb_Click" Visibility="Hidden"/>
        <Button x:Name="caremarketb" Content="Care Market" HorizontalAlignment="Left" Margin="319.832,89.56,0,0" VerticalAlignment="Top" Width="88" Height="28.95" Click="caremarketb_Click" Visibility="Hidden"/>
        <Button x:Name="efreshb" Content="E-Fresh" Margin="180.498,89.56,0,0" VerticalAlignment="Top" Height="28.95" HorizontalAlignment="Left" Width="88" Click="efreshb_Click" Visibility="Hidden"/>
        <TextBlock x:Name="shop_text" HorizontalAlignment="Left" Margin="10,51,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="37.46" Width="286.834" FontSize="20" Visibility="Hidden"><Run Text="Επιλέ"/><Run Text="ξ"/><Run Text="τε Κα"/><Run Text="τάστημα Αγορών"/></TextBlock>
        <Image x:Name="kritikos" Margin="-15.5,137.5,-15,-18.96" Source="kritikos.jpg" Visibility="Hidden"/>
        <Image x:Name="efresh" Margin="-15.5,137.5,-16,-32" Source="efresh.jpg" Visibility="Hidden"/>
        <Image x:Name="care_market" Margin="-15.5,137.5,-16,-54.5" Source="care_market.jpg" Visibility="Hidden"/>
        <Image x:Name="calendar_pic" Margin="0,41.626,10,26.374" Source="7d6785731c6cfa9978a66edc97e8c978.png" Visibility="Hidden"/>
        <TextBlock x:Name="weather_text" HorizontalAlignment="Left" Margin="42.812,57.96,0,0" TextWrapping="Wrap" Text="Πρόγνωση Καιρού" VerticalAlignment="Top" Width="174.52" FontSize="20" Visibility="Hidden"/>
        <Image x:Name="weather_pic" Margin="10,118.51,10,26.374" Source="weather.jpg" Visibility="Hidden"/>
        <Image x:Name="recipes1" Margin="10,41.96,0,26.374" Source="recipes.jpg" Visibility="Hidden"/>
        <TextBox x:Name="search_text" HorizontalAlignment="Left" Height="23" Margin="287.832,48,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Visibility="Hidden"/>
        <Button x:Name="search_b" Content="GO" HorizontalAlignment="Left" Margin="421,48,0,0" VerticalAlignment="Top" Width="25.667" Height="23" Visibility="Hidden"/>
        <Image x:Name="radio_img" Margin="0,41.96,0,10" Source="radio-app-samsung-galaxy-s3.jpg" Visibility="Hidden"/>
        <Slider x:Name="slider" HorizontalAlignment="Right" Margin="0,287.427,222.833,0" Maximum="108" Minimum="85.5" Width="201.834" FontSize="20" LargeChange="5" RenderTransformOrigin="0.5,0.5" Height="32.666" VerticalAlignment="Top" BorderThickness="0" TickPlacement="Both" Value="85" SmallChange="0.3" Visibility="Hidden">
            <Slider.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="4" ScaleX="3"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Slider.RenderTransform>
        </Slider>
        <TextBlock x:Name="radio_text" Text="{Binding ElementName=slider, Path=Value}" HorizontalAlignment="Left" Margin="183.709,317.5,0,271.874" TextWrapping="Wrap" Width="294.706" FontSize="72" RenderTransformOrigin="0.5,0.5" FontWeight="Bold" FontFamily="Myanmar Text" Visibility="Hidden">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="2" ScaleX="2"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBlock.RenderTransform><Run Text="   "/><Run Text="90.3"/></TextBlock>

    </Grid>
</Window>
